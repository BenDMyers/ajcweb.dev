---
import PageLayout from "@/layouts/Base"
import BlogPostPreview from "@/components/BlogPostPreview"
import { sortMDByDate } from "@/util"
import type { Post } from "@/util"
import { p, postPreviewList2, postTitle2, postTitle3, unorderedList24 } from "../styles"

const meta = {
	title: "ajcwebdev",
	description: "Web developer, writer, speaker, and advocate. Developer Advocate at Edgio and Redwood. Host of JavaScript Jam and the FSJam Podcast.",
	canonicalURL: "https://ajcwebdev.com/"
}

const allPosts = await Astro.glob<Post>("./*/*/*/*.mdx")
const allPostsByDate = sortMDByDate(allPosts).slice(0, 5)
---

<PageLayout meta={meta}>
	<section>
		<h1 class={postTitle3}>Anthony Campolo, Developer Advocate</h1>

		<p class={p}>
			Oh hello, didn't see you there. This is my blog.
		</p>
		<p class={p}>Continue reading to achieve peak blogness.</p>
	</section>

	<section aria-label="Blog post list" class="mt-16">
		<h2 class={postTitle2}>Recent Posts</h2>
		<ul class={unorderedList24}>
			{
				allPostsByDate.map((p) => (
					<li class={postPreviewList2}>
						<BlogPostPreview post={p} as="h2" />
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>